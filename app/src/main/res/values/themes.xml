<resources>

    <style name="Theme.NewsApp" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor" >@color/statusBarColor</item>
        <item name="backgroundTint">@color/primary_light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.NewsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NewsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NewsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabGroup.Custom" parent="TagGroup">
        <item name="atg_borderColor">@color/primary</item>
        <item name="atg_textColor">@android:color/black</item>
        <item name="atg_backgroundColor">@android:color/transparent</item>
        <item name="atg_dashBorderColor">@color/primary</item>
        <item name="atg_pressedBackgroundColor">@color/primary_light</item>
    </style>
</resources>